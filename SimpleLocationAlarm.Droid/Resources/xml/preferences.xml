<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref_vibrate"
        android:title="@string/settings_vibrate"
        android:summary="@string/settings_vibrate_summ"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="pref_play_sound"
        android:title="@string/settings_play_sound"
        android:summary="@string/settings_play_sound_summ"
        android:defaultValue="true" />
 	<CheckBoxPreference
        android:key="pref_long_tap"
        android:title="@string/add_mark_on_long_tap"
        android:summary="@string/add_mark_on_long_tap_summary"
        android:defaultValue="false" />
    <Preference android:title="@string/settings_sound" 
                android:key="pref_sound">
        <intent  />        
    </Preference>
    <simplelocationalarm.droid.screens.NumberPickerPreference
        android:key="pref_radius"
        android:title="@string/settings_default_radius"
        android:defaultValue="200" />
    <Preference android:title="@string/settings_about">
        <intent android:action="openaboutscreenaction"/>
    </Preference>
</PreferenceScreen>