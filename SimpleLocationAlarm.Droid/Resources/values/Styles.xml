<?xml version="1.0" encoding="utf-8" ?> 
<resources>
	<style name="_AlarmTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/AlarmActionBar</item>
        <item name="android:windowBackground">@color/light</item>
        <item name="actionBarStyle">@style/AlarmActionBar</item>
        <item name="android:checkboxStyle">@style/CheckBoxAlarm</item>
        <item name="android:editTextStyle">@style/EditTextAlarm</item>       
        <item name="android:textColorHighlight">#999933cc</item>
        <item name="android:buttonStyle">@style/ButtonAlarm</item>
        <item name="android:listViewStyle">@style/ListViewAlarm</item>
        <item name="android:buttonStyleToggle">@style/ToggleButtonAlarm</item>
        <item name="android:textSelectHandleLeft">@drawable/alarm_text_select_handle_left</item>        
        <item name="android:textSelectHandleRight">@drawable/alarm_text_select_handle_right</item>        
        <item name="android:textSelectHandle">@drawable/alarm_text_select_handle_middle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonAlarm</item>
        <item name="actionBarItemBackground">@drawable/ab_item_background</item>
        <item name="android:actionBarItemBackground">@drawable/ab_item_background</item>
    </style>
    
    <style name="AlarmTheme" parent="@style/_AlarmTheme">        
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemAlarm</item>
        <item name="android:spinnerStyle">@style/SpinnerAlarm</item>
    </style>        
    
    <style name="AlarmActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <style name="EditTextAlarm" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#e5caf2</item>
    </style>

    <style name="ButtonAlarm" parent="android:Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="ToggleButtonAlarm" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/toggle_button</item>
        <item name="android:textOn">@string/on</item>
        <item name="android:textOff">@string/off</item>
        <item name="android:minEms">5</item>
        <item name="android:textColor">@color/dark</item>
    </style>
           
    <style name="CheckBoxAlarm" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="popup_fade_animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="SettingsTheme" parent="@style/AlarmTheme">
        <item name="android:actionBarStyle">@style/SettingsActionBar</item>
        <item name="actionBarStyle">@style/SettingsActionBar</item>
    </style>

    <style name="SettingsActionBar" parent="@style/AlarmActionBar">
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="SpinnerDropDownItemAlarm" parent="android:Widget.DropDownItem.Spinner">
          <item name="android:checkMark">@drawable/radio_button</item>
    </style>
    
    <style name="SpinnerAlarm" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:dropDownSelector">@drawable/spinner_list_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
      
    <style name="RadioButtonAlarm" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button</item>   
        <!--<item name="android:textColor">@color/dark</item>-->
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="ListViewAlarm" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/ab_item_background</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">@color/light</item>
        <item name="android:cacheColorHint">@color/light</item>
        <item name="android:fadingEdgeLength">20dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:listDivider">@color/dark_light</item>
        <item name="android:overScrollMode">never</item>
    </style>
    
    <color name="dark">#9933cc</color>
    <color name="dark_light">#aa66cc</color>
    <color name="light">#66e5caf2</color>
    <color name="dark_grey">#adadad</color>
    <color name="light_grey">#66cfcfcf</color>
</resources>