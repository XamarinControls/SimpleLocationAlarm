<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <padding android:top="@dimen/abc_action_bar_icon_vertical_padding" android:bottom="@dimen/abc_action_bar_icon_vertical_padding"/>
            <size android:height="@dimen/abc_action_bar_default_height" android:width="@dimen/abc_action_button_min_width"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/dark_light" />
            <padding android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light" />
            <padding android:right="24dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_grey" />
            <padding android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp"/>
        </shape>
    </item>
</layer-list>